<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/floral_white"
    tools:context=".MainUserActivity">

    <ImageView
        android:id="@+id/btnSettings"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_settings2"
        android:contentDescription="@string/settings"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/greetings"
        android:textSize="40sp"
        android:textColor="@color/brown"
        android:fontFamily="@font/baloo2_extrabold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSettings"
        android:layout_marginTop="42dp"/>

    <!-- SEARCH BAR -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/search_hint"
        app:startIconDrawable="@drawable/ic_search"
        app:startIconTint="@color/brown"
        app:layout_constraintTop_toBottomOf="@+id/tvGreeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- GRID 2X2 DE BOTONS -->
    <GridLayout
        android:id="@+id/gridButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginTop="12dp"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@+id/searchInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="360dp">

        <Button
            android:id="@+id/btnAvui"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:text="AVUI"
            android:backgroundTint="@color/brown"/>

        <Button
            android:id="@+id/btnTot"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:text="TOT"
            android:backgroundTint="@color/brown"/>

        <Button
            android:id="@+id/btnFet"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:text="FET"
            android:backgroundTint="@color/brown"/>

        <Button
            android:id="@+id/btnCalendari"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:text="CALENDARI"
            android:backgroundTint="@color/brown"/>

    </GridLayout>

    <!-- BOTÃ“ PERSONALITZAR GAT -->
    <Button
        android:id="@+id/btnCustomizeCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gat"
        app:layout_constraintTop_toBottomOf="@id/gridButtons"
        app:layout_constraintEnd_toEndOf="@id/gridButtons"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/brown"/>

    <!-- IMATGE DE GAT -->
    <ImageView
        android:id="@+id/ivMainCat"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/gatodepie"
        android:contentDescription="@string/cat_image"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@+id/btnCustomizeCat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>

    <TextView
        android:id="@+id/tvCatName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chulin"
        android:textSize="24sp"
        android:textColor="@color/brown"
        android:fontFamily="@font/baloo2_extrabold"
        app:layout_constraintBottom_toTopOf="@id/ivMainCat"
        app:layout_constraintStart_toStartOf="@id/ivMainCat"
        app:layout_constraintEnd_toEndOf="@id/ivMainCat" />

    <!-- card contenidor de la llista -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintTop_toBottomOf="@id/ivMainCat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/filaInferior">

        <!-- llista -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLists"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/filaInferior"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvNewTask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nova tasca"
            android:textSize="20sp"
            android:gravity="start"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/baloo2_extrabold"
            android:textColor="@color/brown"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/tvNewList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nova llista"
            android:textSize="20sp"
            android:gravity="end"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/baloo2_extrabold"
            android:textColor="@color/brown"
            android:padding="12dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>